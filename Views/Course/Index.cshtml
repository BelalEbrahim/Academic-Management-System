@model List<Course>
@{
    ViewBag.Title = "Course List";
}

<a href="/course/create" class="btn btn-danger">Create</a>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Course ID</th>
            <th>Course Name</th>
            <th>Duration (Hours)</th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="4">No courses available</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.CourseId</td>
                    <td>@item.CourseName</td>
                    <td>@item.DurationInHours</td>
                    <td>
                        <a href="/course/details/@item.CourseId" class="btn btn-info">Details</a>
                        <a href="/course/edit/@item.CourseId" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-controller="Course" asp-route-id="@item.CourseId"
                           class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this course?')">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
