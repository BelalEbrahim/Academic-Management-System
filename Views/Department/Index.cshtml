@model List<Department>

@{
    ViewBag.Title = "dept list";
}


    <a href="/department/create" class="btn btn-danger">Create</a>
    <table class="table table-bordered table-hover" >
                <thead>
                       <tr>
                            <th>Id</th>
                            <th>name</th>
                            <th>capacity</th>
                            <th>Operation</th>
                       </tr>
                </thead>
               <tbody>
                   @if (Model.Count == 0)
                               {
                <tr>

                    <td colspan="4"> No departments</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DeptId</td>
                        <td>@item.DeptName</td>
                        <td>@item.Capacity</td>
                        <td>
                            <a href="/department/details/@item.DeptId" class="btn btn-info">Details</a>
                            <a href="/department/edit/@item.DeptId" class="btn btn-warning">Edit</a>

                            <a asp-action="delete" onclick="return confirm('Are you sure')" asp-controller="department" asp-route-id="@item.DeptId" class="btn btn-danger">Delete</a>
                            <a asp-action="delete"  asp-controller="department" asp-route-id="@item.DeptId" class="btn btn-danger">Delete</a>


                        </td>
                    </tr>
                }
                
                
            }
                </tbody>
         </table>
                
                

